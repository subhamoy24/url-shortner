<% flash[:errors]&.each do |message| %>
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
  <div class="toast" style="position: absolute; top: 0; right: 0;">
    <div class="toast-body">
      <%= message %>
    </div>
  </div>
</div>
<% end %>

<div class="page-wrapper">
  <div class="container">
    <h3 class="text-center text-dark pb-2 mt-5"> Login</h3>
    <div class="row">
      <div class="offset-xl-2 col-xl-8">
        <%= form_for :session, url: login_path do |f| %>
          <div class="row mx-n1">
            <div class="col-xl-12 px-1">
              <div class="form-group">
                <%= f.label :email, class: "label text-dark" %>
                <%= f.email_field :email, autofocus: true, required: true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row mx-n1">
            <div class="col-xl-12 px-1">
              <div class="form-group">
                <%= f.label :password, class: "label text-dark" %>
                <%= f.password_field :password, required: true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="text-right">
            <button name="button" type="submit" class="btn btn-primary mt-2 btn-block">
              Login
            </button>
          </div>
        <% end %>
        <%= link_to "sign up", signup_path %>

      </div>
    </div>
  </div>
</div>
