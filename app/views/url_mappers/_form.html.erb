<div class="page-wrapper">
  <div class="container">
    <div class="row">
      <div class="offset-xl-2 col-xl-8">
        <%=  form_for @url_mapper do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id  %>
          <div class="row mx-n1">
            <div class="col-xl-12 px-1">
              <div class="form-group">
                <%= f.label :title, class: "label text-dark" %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row mx-n1">
            <div class="col-xl-12 px-1">
              <div class="form-group">
                <%= f.label :url, class: "label text-dark" %>
                <%= f.text_field :url, required: true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="text-right">
            <button name="button" type="submit" class="btn btn-primary mt-2 btn-block">
              create
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
